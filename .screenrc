shell bash
autodetach on
vbell off
startup_message off
nethack on
altscreen on
defscrollback 50000
term "screen-256color"
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{=kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B}%Y-%m-%d %{W}%c %{g}]'

defflow off

caption always "%{=b dK} %-w%{=b dG}%n %t%{-}%+w %-= %l %D %d %M %c "
